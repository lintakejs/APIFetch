{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}